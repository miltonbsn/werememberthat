<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		
	</ui:style>

	<g:HTMLPanel ui:field="main">

		<header class="mainHeader cf">
			<h1>We Remember that!</h1>
			<strong class="tagline">Do not you dare forget it!</strong>
			<!-- Don't you dare forget it! -ou- Do not dare to forget it! -->
			<aside class="userOptions">
				<strong>Usu√°rio</strong>
				<div>
					<ul>
						<li>Settings</li>
						<li>Logout</li>
					</ul>
				</div>
			</aside><!-- End .userOptions -->
		</header><!-- End .mainHeader -->


		<g:HTMLPanel styleName="content login">
			<div class="public-container">
				<div class="public-card">
					<div class="public-form front face">
							<h2>Login!</h2>
	 						<form ui:field="divLogin">
								<g:TextBox ui:field="loginTextBox" />
								<g:PasswordTextBox ui:field="passTextBox" />
								<g:Anchor text="Go!" styleName="button" ui:field="enterLoginButton" />
								<div class="public-form-links">
									<g:Anchor text="Register" ui:field="registerUser" />
									<g:Anchor text="Forgot?" ui:field="forgotPasswordAnchor" />
								</div>
	 						</form>
					</div>
		
					<div class="public-form back face">
							<h2>Register</h2>
							<form>
								<g:TextBox ui:field="registerTextBox" />
								<g:PasswordTextBox ui:field="passwordTextBox" />
								<g:Anchor ui:field="saveButton" styleName="button" text="Salvar" />
								<div class="public-form-links">
									<g:Anchor ui:field="cancelAnchor" text="Cancelar" />
								</div>
							</form>
					</div>
				</div>
			</div>
		</g:HTMLPanel>

	</g:HTMLPanel>

</ui:UiBinder> 